<div class="LetterForm">
  <form
    action="https://app.convertkit.com/forms/3922716/subscriptions"
    class="seva-form formkit-form"
    method="post"
    min-width="400 500 600 700 800"
  >
    <div data-style="full">
      <div data-element="column" class="formkit-column">
        <div data-element="fields" class="seva-fields LetterForm-fields">
          <div class="LetterForm-field">
          <label for="newsletter-email">Email address</label>
            <input
              class="formkit-input"
              name="email_address"
              aria-label="Email Address"
              required=""
              type="email"
              id="newsletter-email"
            />
          </div>
          <button
            data-element="submit"
            class="formkit-submit formkit-submit"
          >
            <div class="formkit-spinner"></div>
            <span class="">Subscribe</span>
          </button>
          <p>Unsubscribe at any time.</p>
        </div>
      </div>
    </div>
  </form>
</div>
